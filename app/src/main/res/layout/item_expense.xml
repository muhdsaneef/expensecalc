<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<TextView
		android:id="@+id/tv_expense_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="@dimen/eds_dimen_10"
		android:layout_marginTop="@dimen/eds_dimen_10"
		style="@style/SubHeading"
		tools:text="Bought grocery"/>

	<TextView
		android:id="@+id/tv_expense_description"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/tv_expense_name"
		app:layout_constraintStart_toStartOf="@id/tv_expense_name"
		android:layout_marginTop="@dimen/eds_dimen_5"
		tools:text="Fruits, Vegetables, some stationery"
		style="@style/ItemDescription"/>

	<TextView
		android:id="@+id/tv_expense_created_on"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/tv_expense_description"
		app:layout_constraintStart_toStartOf="@id/tv_expense_name"
		style="@style/ItemDescription"
		android:layout_marginTop="@dimen/eds_dimen_5"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="@dimen/eds_dimen_10"
		tools:text="On 25 Oct 2019"/>

	<TextView
		android:id="@+id/tv_expense_amount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		style="@style/SubHeading"
		tools:text="Rs.20"
		android:layout_marginEnd="@dimen/eds_dimen_10"
		app:layout_constraintTop_toTopOf="@+id/tv_expense_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
