<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

	<style name="SubHeading">
        <item name="android:textSize">@dimen/eds_textsize_16</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ItemDescription">
        <item name="android:textSize">@dimen/eds_textsize_14</item>
        <item name="android:textColor">@color/descriptionColor</item>
    </style>

    <style name="Heading">
        <item name="android:textSize">@dimen/eds_textsize_18</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Info">
        <item name="android:textSize">@dimen/eds_textsize_18</item>
        <item name="android:textColor">@color/infoColor</item>
    </style>


</resources>
